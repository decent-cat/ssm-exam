<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qf.ssmexam.dao.KnowledgeDao">

    <resultMap id="knowledgeMap" type="com.qf.ssmexam.pojo.Knowledge">
        <id property="id" column="id"></id>
        <result property="name" column="kname"></result>
        <result property="createTime" column="createtime"></result>
        <result property="no" column="no"></result>
        <association property="sysUser" javaType="com.qf.ssmexam.pojo.SysUser">
            <result property="nickname" column="nickname"></result>
        </association>
    </resultMap>
    
    <select id="getAll" resultMap="knowledgeMap">
        select k.id id, k.name kname, k.no, k.createtime, su.nickname
            from knowledge k join sys_user su on k.sysuser_id = su.id
    </select>
</mapper>